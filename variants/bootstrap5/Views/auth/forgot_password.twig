{% extends "layouts/auth.twig" %}

{% block title %}{{ lang('Auth.Password_reset') }}{% endblock %}

{% block content %}
    <div class="w-100 m-auto">
        <div class="container">
            <div class="row">
                <div class="col-4 offset-4">
                    <div class="text-center mb-3">
                        <h1 class="h3">{{ config.appName|default('n/a') }}</h1>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text text-center">{{ lang('Auth.msg.forgot_password') }}</p>
                            {{ form_open() }}
                            <div class="input-group mb-3">
                                <input type="email" name="email" class="form-control {{ validation.hasError('email') ? 'is-invalid' }}" placeholder="{{ lang('Auth.Email') }}">
                                <span class="input-group-text">
                                    <span class="bi bi-envelope"></span>
                                </span>
                                {% if validation.hasError('email') %}
                                    <span class="error invalid-feedback">{{ validation.getError('email') }}</span>
                                {% endif %}
                            </div>
                            <div class="d-grid">
                                <button type="submit" name="send" class="btn btn-primary" value="true">{{ lang('Auth.Send') }}</button>
                            </div>
                            {{ form_close() }}
                            <p class="mt-3 mb-1">
                                <a href="{{ base_url('/login') }}">{{ lang('Auth.Back_to_login_page') }}</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
