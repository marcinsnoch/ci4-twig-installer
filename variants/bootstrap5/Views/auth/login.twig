{% extends "layouts/auth.twig" %}

{% block title %}{{ lang('Auth.Login_page') }}{% endblock %}

{% block content %}
    <div class="w-100 m-auto">
        <div class="container">
            <div class="row">
                <div class="col-4 offset-4">
                    <div class="text-center mb-3">
                        <h1 class="h3">{{ config.appName|default('n/a') }}</h1>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text text-center">{{ lang('Auth.msg.login_in_to_application') }}</p>
                            {{ form_open() }}
                            <div class="input-group mb-3">
                                <input type="email" name="email" class="form-control {{ validation.hasError('email') ? 'is-invalid' }}" placeholder="{{ lang('Auth.Email') }}">
                                <span class="input-group-text">
                                    <span class="bi bi-envelope"></span>
                                </span>
                                {% if validation.hasError('email') %}
                                    <span class="error invalid-feedback">{{ validation.getError('email') }}</span>
                                {% endif %}
                            </div>
                            <div class="input-group mb-3">
                                <input type="password" name="password" class="form-control {{ validation.hasError('password') ? 'is-invalid' }}" placeholder="{{ lang('Auth.Password') }}">
                                <span class="input-group-text">
                                    <span class="bi bi-lock"></span>
                                </span>
                                {% if validation.hasError('password') %}
                                    <span class="error invalid-feedback">{{ validation.getError('password') }}</span>
                                {% endif %}
                            </div>
                            <div class="row">
                                <div class="col-8">
                                    <div class="icheck-primary">
                                        <input type="checkbox" name="remember_me" id="remember_me" value="true" {{ set_checkbox('remember_me', 'true') }}>
                                        <label for="remember_me">{{ lang('Auth.Remember_me') }}</label>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <button type="submit" class="btn btn-primary btn-block float-end" name="login" value="true">{{ lang('Auth.Login') }}</button>
                                </div>
                            </div>
                            {{ form_close() }}
                            <p class="mt-3 mb-1">
                                <a href="{{ site_url('forgot-password') }}">{{ lang('Auth.Forgot_your_password') }}?</a><br>
                            </p>
                            <p class="mb-1">
                                <a href="{{ site_url('register') }}" class="text-center">{{ lang('Auth.Register') }}</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
