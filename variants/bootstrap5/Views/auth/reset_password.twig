{% extends "layouts/auth.twig" %}

{% block title %}{{ lang('Auth.Password_reset') }}{% endblock %}

{% block content %}
<div class="w-100 m-auto">
    <div class="container">
        <div class="row">
            <div class="col-4 offset-4">
                <div class="text-center">
                    <h1 class="h3">{{ config.appName|default('n/a') }}</h1>
                </div>
                <div class="card">
                    <div class="card-body">
                        <p class="card-text text-center">{{ lang('Auth.msg.reset_password') }}</p>
                        {{ form_open() }}
                        <div class="input-group mb-3">
                            <input type="password" name="new_password" class="form-control{{ validation.hasError('new_password') ? ' is-invalid'}}" value="{{ set_value('new_password') }}" placeholder="{{ lang('Auth.New_password') }}">
                            <span class="input-group-text">
                                <span class="bi bi-asterisk"></span>
                            </span>
                            {% if validation.hasError('new_password') %}
                                <span class="error invalid-feedback">{{ validation.getError('new_password') }}</span>
                            {% endif %}
                        </div>
                        <div class="input-group mb-3">
                            <input type="password" name="confirm_password" class="form-control{{ validation.hasError('confirm_password') ? ' is-invalid'}}" value="{{ set_value('confirm_password') }}" placeholder="{{ lang('Auth.Confirm_password') }}">
                            <span class="input-group-text">
                                <span class="bi bi-asterisk"></span>
                            </span>
                            {% if validation.hasError('confirm_password') %}
                                <span class="error invalid-feedback">{{ validation.getError('confirm_password') }}</span>
                            {% endif %}
                        </div>
                        <div class="d-grid">
                            <button type="submit" name="reset_password" class="btn btn-primary" value="true">{{ lang('Auth.Save') }}</button>
                        </div>
                        {{ form_close() }}
                        <p class="mt-3 mb-1">
                            <a href="{{ base_url('/login') }}">{{ lang('Auth.Back_to_login_page') }}</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
