{% extends "layouts/auth.twig" %}

{% block title %}{{ lang('Auth.Login_page') }}{% endblock %}

{% block content %}
    <div class="login-box">
        <div class="login-logo">
            <a href="{{ base_url() }}">{{ config.appName }}</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">{{ lang('Auth.msg.login_in_to_application') }}</p>
                {{ form_open() }}
                <div class="input-group mb-3">
                    <input type="email" name="email" class="form-control {{ validation.hasError('email') ? 'is-invalid' }}" placeholder="{{ lang('Auth.Email') }}">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    {% if validation.hasError('email') %}
                        <span class="error invalid-feedback">{{ validation.getError('email') }}</span>
                    {% endif %}
                </div>
                <div class="input-group mb-3">
                    <input type="password" name="password" class="form-control {{ validation.hasError('password') ? 'is-invalid' }}" placeholder="{{ lang('Auth.Password') }}">
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </span>
                    </div>
                    {% if validation.hasError('password') %}
                        <span class="error invalid-feedback">{{ validation.getError('password') }}</span>
                    {% endif %}
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" name="remember_me" id="remember_me" value="true" {{ set_checkbox('remember_me', 'true') }}>
                            <label for="remember_me">{{ lang('Auth.Remember_me') }}</label>
                        </div>
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block float-end" name="login" value="true">
                            {{ lang('Auth.Login') }}
                        </button>
                    </div>
                </div>
                <p class="mt-3 mb-1">
                    <a href="{{ site_url('forgot-password') }}">
                        {{ lang('Auth.Forgot_your_password') }}?
                    </a>
                </p>
                {% if config.register %}
                    <p class="mb-0">
                        <a href="{{ site_url('register') }}">{{ lang('Auth.Register') }}</a>
                    </p>
                {% endif %}
                {{ form_close() }}
            </div>
        </div>
    </div>
{% endblock %}
